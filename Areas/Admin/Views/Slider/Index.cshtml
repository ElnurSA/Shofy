 @model List<Sliders>

<div class="card shadow mb-4" style="width:100%">

    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <div class="create-category mb-3">
                <a asp-area="admin" asp-controller="Slider" asp-action="Create" class="btn btn-success text-white">Create</a>
            </div>
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Slide</th>
                        <th>Operations</th>

                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><img src="~/assets/images/@item.Image" style="width:100px!important; height:100px !important"alt=""></td>
                            <td>
                                <a class="btn btn-info text-white" asp-area="admin" asp-controller="Slider" asp-action="Detail" asp-route-id="@item.Id">Info</a>
                                <a class="btn btn-warning text-white ml-3">Edit</a>
                                <form class="fomrs-sample d-inline" method="post">
                                    <button type="submit" class="btn btn-danger text-white ml-3"asp-area="admin" asp-controller="Slider" asp-action="Delete" asp-route-id="@item.Id">Delete</button>
                                </form>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
