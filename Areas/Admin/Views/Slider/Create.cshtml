@model Sliders

<form method="post" asp-action="create">
    <div class="Container mt-5 mx-3">
        <div class="form-group">
            <label>Description</label>
            <input class="form-control" type="text" asp-for="ExclusiveOffer">
        </div>
        <div class="form-group">
            <label>Discount</label>
            <input class="form-control" type="text" asp-for="PercentDiscount">
        </div>


        <h3>Slider Image:</h3>
        <input class="form-control" type="file" asp-for="Image" />

        <div>
            <a asp-action="Index" class="btn btn-success mt-5">Create</a>
            <a asp-action="Index" class="btn btn-primary mt-5">Back</a>
        </div>
    </div>
</form>



