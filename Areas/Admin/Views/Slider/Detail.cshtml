@model Sliders

<div class="Container mt-5 mx-3">
    <div class="form-group">
        <label>Description</label>
        <input class="form-control" disabled placeholder="@Model.StartingPrice">
    </div>
    <div class="form-group">
        <label>Discount</label>
        <input class="form-control" disabled placeholder="@Model.PercentDiscount">
    </div>
    
    
    <h3>Slider Image:</h3>
    <img src="~/assets/images/@Model.Image" />

    <a asp-action="Index" class="btn btn-primary d-block" >Back</a>
</div>